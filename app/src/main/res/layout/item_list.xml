<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="asteroidItem"
            type="com.udacity.asteroidradar.database.Asteroid" />
        <variable
            name="clickListener"
            type="com.udacity.asteroidradar.main.MainAdapter.OnClickListener" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(asteroidItem)}">

    <TextView
        android:id="@+id/code_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="@{asteroidItem.codeName}" />
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#70FFFFFF"
        android:textSize="15sp"
        android:text="@{asteroidItem.closeApproachDate}" />
    </LinearLayout>
</layout>
